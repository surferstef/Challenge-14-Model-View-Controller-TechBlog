<div class="card">
  <header class="card-header card-header-title">
    
        <div class="column">
            <p class=""></p>
      <a href="/post/{{id}}"  class="">{{title}} </a></p>
      </div>

      <div class="column">
      <span class=""> </span>
      </div>
    
  </header>

    <div class="card-content">
        <div class="content">
            {{post_content}}
        </div>
            <div class="">
                <b>{{user.username}}</b> | 
                <a href="https://twitter.com/{{user.twitter}}"><i class="fab fa-twitter"></i></a> 
                <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
